.v1 {
    background-color: pink;
    width: 200rpx;
    height: 200rpx;
    transition: all 1s;
}
.v1:hover {
    width: 300rpx;
    height: 300rpx;
    background-color: blue;
    border-radius: 50%;
}
.v2 {
    border: 2rpx solid red;
    width: 200rpx;
    height: 200rpx;
    animation: v2A 2s linear infinite;
}
@keyframes v2A {
    0% {
        width: 200rpx;
        height: 200rpx;
        background-color: red;
        transform: translateY(100rpx), rotateZ(360deg);
    }
    25% {
        width: 300rpx;
        height: 300rpx;
        background-color: blue;
        transform: translate(200rpx, 200rpx), rotateZ(3600deg);
    }
    50% {
        width: 400rpx;
        height: 400rpx;
        background-color: yellow;
        transform: translate(100rpx, 500rpx), rotateZ(36000deg);
    }
    75% {
        width: 300rpx;
        height: 300rpx;
        background-color: green;
        transform: translate(300rpx, 600rpx), rotateZ(360000deg);
    }
    100% {
        width: 200rpx;
        height: 200rpx;
        background-color: pink;
        transform: translateY(100rpx), rotateZ(3600000deg);
    }
}
.v3 {
    width: 200rpx;
    height: 200rpx;
    background-color: green;
}
