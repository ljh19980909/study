.news_item {
    display: flex;
    justify-content: space-around;
    width: 100%;
    height: 250rpx;
    box-sizing: border-box;
    border: 1rpx dotted red;
}
.fonts {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 30rpx;
}
.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
