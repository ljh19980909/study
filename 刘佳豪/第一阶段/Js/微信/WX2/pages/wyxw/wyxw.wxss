.news_item {
    display: flex;
    justify-content: space-around;
    width: 100%;
    height: 250rpx;
    box-sizing: border-box;
    border: 1rpx dotted red;
}
.fonts {
    width: 45%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 30rpx;
}
.pic {
    width: 35%;
}
.pic image {
    width: 100%;
    height: 100%;
}
.stars {
    width: 20%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    text-align: center;
}
.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.a {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
